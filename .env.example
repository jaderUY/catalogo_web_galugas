# Catálogo Web Galugas - Ejemplo de Configuración de Entorno
# Copiar a .env y actualizar con tus valores

# ============================================================
# ENTORNO DE EJECUCIÓN
# ============================================================
# Valores: development, test, production
NODE_ENV=development

# ============================================================
# SERVIDOR (Backend API)
# ============================================================
# Puerto del servidor API
SERVER_PORT=3000

# Base de datos MySQL
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=DB_Galugas_web
DB_POOL_LIMIT=10
DB_CONNECTION_TIMEOUT=5000

# Seguridad del servidor
SERVER_SESSION_SECRET=change-this-to-a-secure-random-string-in-production
JWT_SECRET=change-this-jwt-secret-in-production
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Archivos y almacenamiento
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./server/uploads

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=90

# API
API_VERSION=v1

# ============================================================
# CLIENTE (Frontend SSR)
# ============================================================
# Puerto del cliente
CLIENT_PORT=3001

# Seguridad del cliente
CLIENT_SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Configuración de API desde el cliente
API_URL=http://localhost:3000/api
API_TIMEOUT=30000

# Rutas de archivos del cliente
CLIENT_UPLOAD_PATH=./client/public/uploads

# Sesión del cliente
SESSION_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false

# ============================================================
# URLS Y ENDPOINTS
# ============================================================
# URL del cliente (usado por el servidor para CORS)
CLIENT_URL=http://localhost:3001

# URL del servidor (usado por el cliente)
SERVER_URL=http://localhost:3000

# ============================================================
# MODO DE DEPURACIÓN
# ============================================================
DEBUG=false
DEBUG_SQL=false
VERBOSE_LOGGING=false

  },
  "scripts": {
    "start": "node server/server.js",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "client": "node client/app.js",
    "client:dev": "nodemon client/app.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "test": "echo \"Tests not configured yet\" && exit 0",
    "test:server": "node --test server/**/*.test.js",
    "test:client": "node --test client/**/*.test.js",
    "setup-db": "node server/scripts/setupDatabase.js",
    "seed": "node server/scripts/seedData.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "validate:env": "node scripts/validateEnv.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
